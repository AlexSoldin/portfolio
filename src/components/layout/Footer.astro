---
const year = new Date().getFullYear();

const socials = [
  { name: "GitHub", href: "https://github.com/alexsoldin" },
  { name: "LinkedIn", href: "https://linkedin.com/in/alexsoldin" },
  { name: "X", href: "https://x.com/alexsoldin" },
  { name: "Instagram", href: "https://instagram.com/alexandersoldin" },
];
---

<footer class="w-full mt-auto p-8 md:p-12">
  <nav
    class="flex flex-col md:flex-row w-full items-center justify-between border-t border-[var(--border)] pt-8 gap-6 md:gap-0"
  >
    <div class="text-xs font-mono text-[var(--muted)]">
      <span>&copy; {year} Alex Soldin</span>
      <span class="mx-2">-</span>
      <span>rebuilding in Astro</span>
    </div>
    <div
      class="flex items-center gap-8 text-xs font-mono uppercase tracking-wider text-[var(--muted)]"
    >
      {
        socials.map((social) => (
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-[var(--foreground)] transition-colors"
          >
            {social.name}
          </a>
        ))
      }
    </div>
  </nav>
</footer>
