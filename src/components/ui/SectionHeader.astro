---
interface Props {
  title: string;
  navClass?: string;
  class?: string;
}

const { title, navClass = "", class: className = "mb-12" } = Astro.props;
---

<div
  class:list={["flex flex-col md:flex-row justify-between items-start md:items-center", className]}
>
  <h3 class="text-label text-(--muted) mb-6 md:mb-0">
    {title}
  </h3>
  <nav class:list={["flex gap-8 md:gap-12 scrollbar-hide overflow-x-auto", navClass]}>
    <slot />
  </nav>
</div>
