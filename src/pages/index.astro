---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Alex Soldin">
  <div class="flex-1 flex flex-col items-center justify-center p-6">
    <div class="text-center space-y-6 max-w-2xl">
      <h1 class="font-serif text-6xl md:text-8xl font-bold tracking-tight">Alex Soldin</h1>
      <div class="space-y-2">
        <p class="text-xl md:text-2xl text-[var(--muted)]">Software Engineer</p>
        <p class="text-sm text-[var(--muted)] opacity-70">Amsterdam, NL</p>
      </div>
    </div>
  </div>
</BaseLayout>
