---
import { RotatingBadge } from "@/components/features/home/RotatingBadge";
import BaseLayout from "@/layouts/BaseLayout.astro";

const year = new Date().getFullYear();

const socials = [
  { name: "GitHub", href: "https://github.com/alexsoldin" },
  { name: "LinkedIn", href: "https://linkedin.com/in/alexsoldin" },
  { name: "Twitter", href: "https://twitter.com/alexsoldin" },
  { name: "Instagram", href: "https://instagram.com/alexsoldin" },
];
---

<BaseLayout title="Alex Soldin" showFooter={false}>
  <div class="flex h-screen w-full flex-col p-6 md:p-8 lg:p-12 overflow-hidden">
    <!-- Header -->
    <header class="flex w-full items-start justify-between">
      <div class="flex flex-col gap-0.5">
        <div class="flex items-center gap-2 font-mono text-sm uppercase tracking-wide">
          <span class="w-3 h-3 bg-[var(--foreground)]"></span>
          <span class="font-bold">Alex Soldin</span>
        </div>
        <span class="text-xs font-mono text-[var(--muted)] pl-5">Software engineer</span>
        <span class="text-xs font-mono text-[var(--muted)] pl-5">Amsterdam, NL</span>
      </div>
      <!-- <a
        href="/contact"
        class="flex items-center gap-2 font-mono text-xs uppercase tracking-wider text-[var(--foreground)] hover:opacity-60 transition-opacity"
      >
        <span>Get in touch</span>
        <span class="material-symbols-outlined text-base">arrow_outward</span>
      </a> -->
    </header>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col items-center justify-center relative my-4">
      <div class="flex flex-col items-center gap-8 md:gap-12 w-full max-w-4xl mx-auto text-center">
        <!-- Rotating Badge -->
        <RotatingBadge client:load />

        <!-- Hero Content -->
        <div class="relative w-full flex flex-col items-center">
          <!-- Quote/Headline -->
          <h1
            class="font-serif text-4xl md:text-6xl lg:text-7xl italic leading-tight text-[var(--foreground)] z-20 mix-blend-multiply max-w-2xl"
          >
            First, understand the problem. Then, build what matters.
          </h1>

          <!-- Featured Image -->
          <div
            class="mt-8 relative w-full max-w-md aspect-[4/3] md:aspect-[16/9] overflow-hidden rounded-sm shadow-xl group"
          >
            <div
              class="w-full h-full bg-cover bg-center grayscale group-hover:grayscale-0 transition-all duration-700 ease-out bg-[var(--muted)]/20"
              style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuCKXaD1-Ebr8wJSU3RyCGH_e6rCZjnjB6yyNu77eV3294_IHEUoreGO9469X1DGbGaIfJvyNTRuJvsLEXnELOyYY4YNq9bJHmrvceCRfRw5U7XxRMa6xuh7A1UF5enmn8NGiPE1_zlZDVxMwe9RuaCEsXZy38ZEMvJ-dk-TTPzUNqbjHL9wlNMqHzIwZN63Nh-V3XEC7lJF85X4Rsr2WZui0WDrynSuB0M8qrCPWF7atP-4J9uX1Xiv6hImWSygID50SXuBY3iQaHk');"
            >
            </div>
            <div
              class="absolute inset-0 bg-[var(--background)] mix-blend-color opacity-20 pointer-events-none"
            >
            </div>
          </div>

          <!-- <div
            class="mt-8 font-mono text-xs uppercase tracking-widest text-[var(--foreground)]"
          >
            <a
              class="flex items-center gap-2 hover:opacity-60 transition-opacity"
              href="/about"
            >
              <span class="material-symbols-outlined text-base">north_east</span>
              About me
            </a>
          </div> -->
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="w-full">
      <nav
        class="flex flex-col md:flex-row w-full items-center justify-between border-t border-black/10 pt-6 gap-6 md:gap-0"
      >
        <div class="text-xs font-mono text-[var(--muted)]">
          <span>&copy; {year} Alex Soldin</span>
          <span class="mx-2">-</span>
          <span>rebuilding in Astro</span>
        </div>
        <div
          class="flex items-center gap-8 text-xs font-mono uppercase tracking-wider text-[var(--muted)]"
        >
          {
            socials.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-[var(--foreground)] transition-colors"
              >
                {social.name}
              </a>
            ))
          }
        </div>
      </nav>
    </footer>
  </div>
</BaseLayout>
