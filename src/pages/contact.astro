---
import BackButton from "@/components/ui/BackButton.astro";
import PageHero from "@/components/ui/PageHero.astro";
import SectionLabel from "@/components/ui/SectionLabel.astro";
import { socials } from "@/data/socials";
import BaseLayout from "@/layouts/BaseLayout.astro";

const title = "Alex Soldin";
---

<BaseLayout title={title} showFooter={true}>
  <BackButton slot="nav" />

  <main class="relative z-10 flex-1 flex flex-col items-center px-6 pt-16 pb-16">
    <div class="w-full max-w-5xl mx-auto">
      <PageHero title="Get in touch." showBorder={false} />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 pt-12 border-t border-(--border)">
        <div>
          <SectionLabel text="Email" />
          <a
            class="text-2xl md:text-3xl font-serif italic hover:text-(--muted) transition-colors"
            href="mailto:alex.soldin@gmail.com"
          >
            alex.soldin@gmail.com
          </a>
        </div>
        <div>
          <SectionLabel text="Social presence" />
          <ul class="space-y-2 uppercase text-[11px] tracking-widest">
            {
              socials.map((social) => (
                <li>
                  <a
                    class="hover-underline inline-block"
                    href={social.href}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {social.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
